using System;
					
public class Program
{
    public static void Main()
    {
        Random aleatorio = new Random();
        int dado1 = 0;
        int dado12 = 0;

        int total = (dado1);

        int cont = 0;
        int cont6 = 0;
        int cont1 = 0;
        int contdado12 = 2;
        int contvida = 3;

        string continuar = "s";
			
        while (continuar == "s")
        {
            dado1 = aleatorio.Next(1, 6);
            dado12 = aleatorio.Next(1, 12);
            if (contdado12 > 0)
            {
                Console.WriteLine(" Usar dado de 12 caras?");
                string dadodocec = Console.ReadLine();
                if (dadodocec == "s")
                {
					Console.WriteLine(" Sacas: " + dado12);
                    total += dado12;
                    contdado12--;
                    Console.WriteLine(" Usaste dado de 12, restan: " + contdado12);
                }
                else total += dado1;
            }
            else if(contdado12 == 0) total += (dado1);

            //Console.WriteLine(" total: " + total);

            if (dado1 == 1 )
            {
                cont1++;
                if(cont1 > 1) 
                {
                    total = total - 10;
                    contvida--;
                    Console.WriteLine(" Perdiste una vida (-10pts) ");
                    cont1 = 0;
                }  
            }

            if (dado1 == 6)
            {
                cont6++;
                if (cont6 > 1 && contvida < 3)
                {
                    contvida++;
                    Console.WriteLine(" Recuperas una vida ");
                    cont6 = 0;
                }
				 if (total <= 0 )
            {
                total = 0;
            }
            }
			 if (contvida == 0 )
            {
                Console.Write(" Perdiste ");
                break;
            }
            if (contvida == 0 )
            {
                Console.Write(" Perdiste ");
                break;
            }

            else if (total >= 100)
            {
                Console.WriteLine(" Ganaste ");
                Console.WriteLine(" Total " + total);
                break;
            }
            else
            {
				Console.WriteLine(" Sacas: " + dado1);
                Console.WriteLine(" Total " + total);
				Console.WriteLine(" Â¿Deseas Continuar? ");
                continuar = Console.ReadLine();
            }
			Console.WriteLine(" Tus vidas son: " + contvida);
            cont++;
        }
    }
}
